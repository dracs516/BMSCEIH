<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/home_bg"
>
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="20sp"
            android:layout_below="@id/notice_title"
            android:layout_toRightOf="@id/notice_img"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/alfa_slab_one"
            android:textAllCaps="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:text="Log Out"
        android:textSize="10dp"
        android:background="#f6fff2"
        android:textColor="#fff"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:transitionName="button_trans"/>
    </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Noticeboard"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/alfa_slab_one"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW ALL"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView"
                    android:scrollbars="none"
                    >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="8dp"
                    android:layout_margin="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/notice_img"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_4" />


                        <TextView
                            android:id="@+id/notice_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Room Inspection"
                            android:textSize="20sp"
                            android:fontFamily="@font/alfa_slab_one"
                            android:layout_toRightOf="@id/notice_img"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorAccent"
                            android:lineHeight="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/notice_img"/>

                        <TextView
                            android:id="@+id/notice_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Officials will be inspecting the rooms on third and fourth floors"
                            android:layout_below="@id/notice_title"
                            android:layout_toRightOf="@id/notice_img"
                            android:padding="10dp"/>





                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="8dp"
                    android:layout_margin="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/notice_img1"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_5" />


                        <TextView
                            android:id="@+id/notice_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Football Match"
                            android:textSize="20sp"
                            android:fontFamily="@font/alfa_slab_one"
                            android:layout_toRightOf="@id/notice_img1"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorAccent"
                            android:lineHeight="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/notice_img1"/>


                        <TextView
                            android:id="@+id/notice_desc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IH vs NH3 today at 4pm"
                            android:layout_below="@id/notice_title1"
                            android:layout_toRightOf="@id/notice_img1"
                            android:padding="10dp"/>





                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="8dp"
                    android:layout_margin="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/notice_img2"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_6" />


                        <TextView
                            android:id="@+id/notice_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cricket Match"
                            android:textSize="20sp"
                            android:fontFamily="@font/alfa_slab_one"
                            android:layout_toRightOf="@id/notice_img2"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorAccent"
                            android:lineHeight="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/notice_img2"/>


                        <TextView
                            android:id="@+id/notice_desc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NBH3 Boys VS IH Boys at 12pm"
                            android:layout_below="@id/notice_title2"
                            android:layout_toRightOf="@id/notice_img2"
                            android:padding="10dp"/>





                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="8dp"
                    android:layout_margin="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/notice_img3"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_8" />


                        <TextView
                            android:id="@+id/notice_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hostel Form Submission"
                            android:textSize="20sp"
                            android:fontFamily="@font/alfa_slab_one"
                            android:layout_toRightOf="@id/notice_img3"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorAccent"
                            android:lineHeight="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/notice_img3"/>


                        <TextView
                            android:id="@+id/notice_desc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deadline by 31/ 07/ 2022"
                            android:layout_below="@id/notice_title3"
                            android:layout_toRightOf="@id/notice_img3"
                            android:padding="10dp"/>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="Upcoming Events"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="VIEW ALL" />


        </RelativeLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



