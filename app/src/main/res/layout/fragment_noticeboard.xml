                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alfa_slab_one"
                            android:text="Rakhshya Bandhan"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            android:layout_marginRight="90dp"/>

                        <ImageView
                            android:id="@+id/events_image"
                            android:layout_width="85dp"
                            android:layout_height="200dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/rakhsya" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="275dp"
                    android:layout_height="200dp"
                    android:layout_margin="12sp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/background_gradient1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/c2"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/events_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alfa_slab_one"
                            android:text="Tihar/ Laxmi Puja"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            android:layout_marginRight="90dp"/>

                        <ImageView
                            android:id="@+id/events_image1"
                            android:layout_width="85dp"
                            android:layout_height="200dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="275dp"
                    android:layout_height="200dp"
                    android:layout_margin="12sp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/background_gradient2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/c3"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/events_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alfa_slab_one"
                            android:text="Bada Dashain"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            android:layout_marginRight="90dp"/>

                        <ImageView
                            android:id="@+id/events_image2"
                            android:layout_width="85dp"
                            android:layout_height="200dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_1" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="275dp"
                    android:layout_height="200dp"
                    android:layout_margin="12sp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/background_gradient3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/c4"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/events_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alfa_slab_one"
                            android:text="Holi"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            android:layout_marginRight="90dp"/>

                        <ImageView
                            android:id="@+id/events_image3"
                            android:layout_width="85dp"
                            android:layout_height="200dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_2" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="275dp"
                    android:layout_height="200dp"
                    android:layout_margin="12sp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/background_gradient4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/c1"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/events_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alfa_slab_one"
                            android:text="Chhathh Puja"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp"
                            android:layout_marginRight="90dp"/>

                        <ImageView
                            android:id="@+id/events_image4"
                            android:layout_width="85dp"
                            android:layout_height="200dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/img_3" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>

</LinearLayout>
